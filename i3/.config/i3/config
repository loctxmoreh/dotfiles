bar {
    id bar-primary
    workspace_buttons yes
    position bottom
    output primary
    status_command slstatus -s
    font pango:Source Code Pro for Powerline 10
    modifier none
}

bar {
    id bar-secondary
    workspace_buttons yes
    position bottom
    output nonprimary
    tray_output none
    status_command slstatus -s
    font pango:Source Code Pro for Powerline 10
    modifier $mod
}

